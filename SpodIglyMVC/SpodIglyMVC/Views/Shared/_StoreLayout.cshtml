
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />

    @System.Web.Optimization.Styles.Render("~/Content/themes/base/css")
</head>
<body>

    <header>
        <div style="overflow: hidden;">
            <a id="facebook-header" href="">
                DOŁĄCZ DO 1500 FANÓW NA FB
            </a>

            <a id="cart-header-link" href="">
                KOSZYK (<span id="cart-header-items-count">@Html.Action("GetCartItemsCount", "Cart")</span>)
                <span id="cart-header-logo"></span>
            </a>
        </div>
        <a id="main-header-logo" href="@Url.Content("~/")">
            <img src="@Url.Content("~/Content/Images/spodigly-logo-main.png")" class="center" />
        </a>
    </header>

    <div>
        @RenderBody()
    </div>

    <footer>
        <nav>
            <ul>
                <li>
                    @Html.ActionLink("O nas", "StaticContent", "Home", new { viewname = "onas" }, null)
                </li>
                <li>@Html.ActionLink("Kontakt", "StaticContent", "Home", new { viewname = "kontakt" }, null)</li>
                <li>@Html.ActionLink("Wysyłka", "StaticContent", "Home", new { viewname = "wysylka" }, null)</li>
                <li>@Html.ActionLink("Regulamin", "StaticContent", "Home", new { viewname = "regulamin" }, null)</li>
            </ul>
        </nav>
        <div id="footer-cd-logo">
            <img src="@Url.Content("~/content/images/footer-cd.png")" />
        </div>

        <div id="footer-copyright">
            Copyright &copy; 2013 Spod Igły
        </div>
    </footer>

    @RenderSection("ScriptsBottom", required: false)
</body>
</html>
